<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="alison.fivethingskotlin.ViewModels.FiveThingsViewModel"/>

        <variable
            name="fiveThings"
            type="alison.fivethingskotlin.Models.FiveThings"/>
    </data>

    <FrameLayout
        android:id="@+id/five_things_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/grey"
        tools:context="alison.fivethingskotlin.Fragments.FiveThingsFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="5dp"
                    android:text="Wednesday September 22nd, 2017"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ONE"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:minLines="4"
                    android:padding="4dp"
                    android:text="@{fiveThings.one}"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TWO"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:minLines="4"
                    android:padding="4dp"
                    android:text="@{fiveThings.two}"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THREE"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:minLines="4"
                    android:padding="4dp"
                    android:text="@{fiveThings.three}"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FOUR"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:minLines="4"
                    android:padding="4dp"
                    android:text="@{fiveThings.four}"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FIVE"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:minLines="4"
                    android:padding="4dp"
                    android:text="@{fiveThings.five}"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:background="@color/bluegreen"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:onClick="@{viewModel::writeFiveThings"/>
            </LinearLayout>

        </ScrollView>

    </FrameLayout>
</layout>

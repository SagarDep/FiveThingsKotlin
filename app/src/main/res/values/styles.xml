<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3AAFAB</item>
        <item name="colorPrimaryDark">#277976</item>
        <item name="colorAccent">#3aafab</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorBackground">@color/grey</item>
        <item name="preferenceTheme">@style/PrefTheme</item>
    </style>

    <style name="PrefTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textColorSecondary">@color/white_text</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Loading">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Text.ViewPagerHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>

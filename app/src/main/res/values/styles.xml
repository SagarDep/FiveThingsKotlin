<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3AAFAB</item>
        <item name="colorPrimaryDark">#277976</item>
        <item name="colorAccent">#3aafab</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="preferenceTheme">@style/PrefTheme</item>
        <item name="colorControlNormal">@color/primary_text_color</item>
        <item name="android:alertDialogTheme">@style/CustomDialogTheme</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/background_color</item>
        <item name="textColorAlertDialogListItem">@color/primary_text_color</item>
    </style>

    <!--TODO detail text for dialogs needs fixed-->

    <style name="PrefTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
    </style>

    <style name="ThingField">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@drawable/rounded_text_box</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:minHeight">75dp</item>
        <item name="android:maxLength">65535</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="Text.Loading">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Text.ViewPagerHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>
